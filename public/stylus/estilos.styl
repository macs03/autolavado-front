colornav = #2385A1
botones = #33BCF2
facebook = #385597
twitter = #65B3DA
google = #D94835
instagram = #A27359

body
	background white

h1
	color white
	margin: 1em
	font-size 1em
		
header
	position fixed
	background colornav
	margin-top 0em
	width 100%
	z-index 5
	
footer
	background colornav
	color white
	padding 1em 0
	text-align center
	width 100%
	a 
		color white

#top
	background url("../img/lavado1.jpg")
	background-attachment fixed
	padding-top 3em
	width 100%
	height 500px
	z-index 1

.transparencia
	background rgba(35, 133, 161, 0.7)
	padding-top 3em
	width 100%
	height 460px
	z-index 1

#message
	background url("../img/autolavado3.jpg")
	background-attachment fixed
	width 100%
	height 260px
	z-index 1
	
.transparencia2
	background rgba(35, 133, 161, 0.7)
	width 100%
	height 260px
	z-index 1
	
.lessopacity
	color white
	a
		color botones

.bar-menu
	display none



.go-up
	width 10%
	margin-top -3em

.row
	margin 0 !important

.google
	a
		color google
.facebook
	a
		color facebook
.twitter
	a
		color twitter
.instagram
	a
		color instagram

	
@media (max-width: 768px)
	#menu
		display none
		border-top solid 1px white
		list-style: none
		li
			padding .5em
			a
				color white
	.bar-menu
		display block
		color white
		cursor: pointer
		margin: 1em 1em 1em 0	


